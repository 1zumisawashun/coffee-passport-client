{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    // typesを追加する
    "types": ["@nuxt/types", "@types/node", "@nuxtjs/axios"]
  },
  "files": ["types/shims-vue.d.ts"],
  // "include": [
  //   "components/**/*.ts",
  //   "components/**/*.vue",
  //   "layouts/**/*.ts",
  //   "layouts/**/*.vue",
  //   "pages/**/*.ts",
  //   "pages/**/*.vue"
  // ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
